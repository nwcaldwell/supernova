<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nathanwcaldwell.supernova.LevelCompleteActivity"
    android:background="@drawable/level_complete"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MORE COINS"
        android:id="@+id/button40"
        android:src="@drawable/more_coins_button"
        android:paddingLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGHSCORES"
        android:id="@+id/button41"
        android:src="@drawable/highscore_button"
        android:onClick="goToHighStoresActivity"
        android:layout_alignTop="@+id/button43"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="12dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/button42"
        android:src="@drawable/share_button"
        android:paddingRight="12dp"
        android:layout_alignTop="@+id/button40"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STORE"
        android:id="@+id/button43"
        android:src="@drawable/store_button"
        android:onClick="goToStoreActivity"
        android:layout_marginBottom="87dp"
        android:layout_above="@+id/button40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="12dp"/>


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/button44"
        android:layout_gravity="center_horizontal"
        android:onClick="goToMainActivity"
        android:layout_marginBottom="94dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="RETRY"
        android:id="@+id/button45"
        android:onClick="goToMercuryActivity"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/button44"
        android:layout_alignLeft="@+id/button44"
        android:layout_alignStart="@+id/button44" />
</RelativeLayout>