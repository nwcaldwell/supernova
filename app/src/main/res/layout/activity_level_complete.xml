<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nathanwcaldwell.supernova.GameOverActivity"
    android:background="@drawable/level_complete"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MORE COINS"
            android:id="@+id/button4"
            android:src="@drawable/more_coins_button"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/image1"
            android:layout_alignStart="@+id/image1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIGHSCORES"
            android:id="@+id/button5"
            android:src="@drawable/highscore_button"
            android:layout_alignTop="@+id/image1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="goToHighStoresActivity"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:id="@+id/button6"
            android:src="@drawable/share_button"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/button4"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STORE"
            android:id="@+id/image1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="230dp"
            android:src="@drawable/store_button"
            android:onClick="goToStoreActivity" />
    </RelativeLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="RETRY"
        android:id="@+id/button"
        android:layout_above="@+id/button2"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:onClick="goToMercuryActivity"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/button2"
        android:onClick="goToMainActivity"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
